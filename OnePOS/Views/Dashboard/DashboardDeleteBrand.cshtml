@model OnePOS.Models.Dashboard.Brand.BrandViewModels

@{
    ViewBag.Title = "DeleteBrand";
    Layout = "~/Views/Shared/_LayoutForDashboard.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Delete Brand</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>


        <div class="row">
            <div class="delete-brands-section">
                @using (Html.BeginForm("DashboardDeleteBrand", "Dashboard", FormMethod.Post, new { @id = "DeleteBrandPost", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-section delete-brands-manual section-header">
                 
                        <div class="brands-group-list">
                            <div class="panel panel-default brands-form-container">
                                <div class="panel-body brands-group-form">

                                    <div class="form-group">
                                        <div class="col-sm-12 brand-name">
                                            <label class="control-label">Brand Name</label>
                                            @Html.TextBoxFor(m => m.BrandName, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-12 brand-description">
                                            <label class="control-label">Brand Description</label>
                                            @Html.TextAreaFor(m => m.BrandDescription, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="delete-brand-input-btn">
                        <input type="submit" value="Delete Vendor " class="btn btn-blue btn-lg submit-button" />
                    </div>

                }

            </div>

        </div>


    </div>

    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
@section AdditionalJavascript {
    <script src="~/Assets/js/Brand/editBrands.js"></script>
}

@section PageJavascript {
    <script>
        functionEditFormBrand();
    </script>
}