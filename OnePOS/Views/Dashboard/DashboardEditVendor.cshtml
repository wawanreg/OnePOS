@model OnePOS.Models.Dashboard.Vendors.VendorViewModels

@{
    ViewBag.Title = "EditVendor";
    Layout = "~/Views/Shared/_LayoutForDashboard.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Vendor</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>


        <div class="row">
            <div class="edit-vendors-section">
                @using (Html.BeginForm("DashboardEditVendor", "Dashboard", FormMethod.Post, new { @id = "EditVendorPost", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-section edit-vendors-manual section-header">
                       
                        <div class="vendors-group-list">
                            <div class="panel panel-default vendors-form-container">
                                <div class="panel-body vendors-group-form">
                                    
                                    <div class="form-group">
                                        <div class="col-sm-6 vendor-name">
                                            <label class="control-label">Vendor Name</label>@Html.ValidationMessageFor(x => x.VendorName, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(m => m.VendorName, new { @class = "form-control" })
                                        </div>
                                        <div class="col-sm-3 vendor-phone">
                                            <label class="control-label">Vendor Phone</label>@Html.ValidationMessageFor(x => x.VendorPhone, "", new { @class = "text-danger" })
                                            @Html.TextBoxFor(m => m.VendorPhone, new { @class = "form-control" })
                                        </div>
                                        <div class="col-sm-3 vendor-owner">
                                            <label class="control-label">Vendor Owner</label>
                                            @Html.TextBoxFor(m => m.VendorOwner, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-6 vendor-address">
                                            <label class="control-label">Vendor Address</label>@Html.ValidationMessageFor(x => x.VendorAddress, "", new { @class = "text-danger" })
                                            @Html.TextAreaFor(m => m.VendorAddress, new { @class = "form-control" })
                                        </div>
                                        <div class="col-lg-6 vendor-email">
                                            <label class="control-label">Vendor Email</label>
                                            @Html.TextBoxFor(m => m.VendorEmail, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="edit-vendor-input-btn">
                        <input type="submit" value="Edit Vendor " class="btn btn-blue btn-lg submit-button" />
                    </div>

                }

            </div>

        </div>


    </div>

    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
