@model OnePOS.Models.Dashboard.Storage.StorageViewModels

@{
    ViewBag.Title = "EditStorage";
    Layout = "~/Views/Shared/_LayoutForDashboard.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Edit Storage</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>


        <div class="row">
            <div class="edit-storages-section">
                @using (Html.BeginForm("DashboardEditStorage", "Dashboard", FormMethod.Post, new { @id = "EditStoragePost", @class = "form-horizontal", role = "form" }))
                {
                    <div class="form-section edit-storages-manual section-header">
                        <div class="storages-group-list">
                            <div class="panel panel-default storages-form-container">
                                <div class="panel-body storages-group-form">

                                    <div class="form-group">
                                        <div class="col-sm-12 storage-name">
                                            <label class="control-label">Storage Name</label>
                                            @Html.TextBoxFor(m => m.StorageName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <div class="col-sm-12 storage-description">
                                            <label class="control-label">Storage Description</label>
                                            @Html.TextAreaFor(m => m.StorageDescription, new { @class = "form-control" })
                                        </div>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="edit-storage-input-btn">
                        <input type="submit" value="Edit Storage " class="btn btn-blue btn-lg submit-button" />
                    </div>

                }

            </div>

        </div>


    </div>

    <!-- /#page-wrapper -->
</div>
<!-- /#wrapper -->
